  <!--begin::Page Scripts(used by this page) -->
  <script>

    "use strict";
    // Private functions
    var signalIndex = function () {

      var datatable = $('.kt-datatable').KTDatatable({
        data: {
          saveState: { cookie: false },
        },
        search: {
          input: $('#generalSearch'),
          delay: 400,
        },
        columns: [
          {
            field: '#',
            title: 'OrderID',
            type: 'number',
            sortable: 'asc',
            width: 30,
          }, {
            field: 'Name',
            title: 'Name',
            width: 60,
            autoHide: false,
            template: function (row) {
              return `<a href="/admin/signal?signal=${row.Name.toLowerCase()}" class="kt-user-card-v2__name">${row.Name}</a>`
            }
          }, {
            field: 'Type',
            title: 'Type',
            width: 60,
            template: function (row) {
              // console.log(row)
              var status = {
                'BUY': { 'title': 'Buy', 'state': 'success' },
                'BUYLIMIT': { 'title': 'Buy Limit', 'state': 'success' },
                'BUYSTOP': { 'title': 'Buy Stop', 'state': 'success' },
                'SELL': { 'title': 'Sell', 'state': 'danger' },
                'SELLLIMIT': { 'title': 'Sell Limit', 'state': 'danger' },
                'SELLSTOP': { 'title': 'Sell Stop', 'state': 'danger' }
              };
              return `<span class='kt-font-bold kt-font-${status[row.Type].state}'>${status[row.Type].title}</span>`
            }
          }, {
            field: 'Entry',
            title: 'Entry',
            type: 'number',
            width: 60,
            sortable: false
          }, {
            field: 'SL',
            title: 'SL',
            type: 'number',
            width: 60,
            sortable: false
          }, {
            field: 'TP1',
            title: 'TP1',
            type: 'number',
            width: 60,
            sortable: false
          }, {
            field: 'TP2',
            title: 'TP2',
            type: 'number',
            width: 60,
            sortable: false
          }, {
            field: 'TP3',
            title: 'TP3',
            type: 'number',
            width: 60,
            sortable: false
          }, {
            field: 'Close',
            title: 'Close',
            type: 'number',
            width: 60,
            sortable: false
          }, {
            field: 'Status',
            title: 'Status',
            autoHide: true,
            width: 60,
            // callback function support for column rendering
            template: function (row) {
              var status = {
                1: { 'title': 'Inactive', 'state': 'danger' },
                2: { 'title': 'Done', 'state': 'primary' },
                3: { 'title': 'Active', 'state': 'success' },
                4: { 'title': 'Waiting', 'state': 'warning' }
              };
              return '<span class="kt-badge kt-badge--' + status[row.Status].state + ' kt-badge--dot"></span>&nbsp;<span class="kt-font-bold kt-font-' + status[row.Status].state + '">' + status[row.Status].title + '</span>';
            }
          }, {
            field: 'Progress',
            title: 'Progress',
            width: 60,
            autoHide: true,
            sortable: false,
            template: function (row) {
              var status = {
                0: { 'title': 'SL', 'state': 'danger' },
                1: { 'title': 'None', 'state': 'primary' },
                2: { 'title': 'TP1', 'state': 'success' },
                3: { 'title': 'TP2', 'state': 'success' },
                4: { 'title': 'TP3', 'state': 'success' },
                5: { 'title': 'Close', 'state': 'warning' }
              };
              return '<span class="kt-badge kt-badge--' + status[row.Progress].state + ' kt-badge--dot"></span>&nbsp;<span class="kt-font-bold kt-font-' + status[row.Progress].state + '">' + status[row.Progress].title + '</span>';
            }
          }, {
            field: 'Result',
            title: 'Result',
            width: 60,
            // callback function support for column rendering
            template: function (row) {
              var status = {
                1: { 'title': 'Lose', 'state': 'danger' },
                2: { 'title': 'Undefined', 'state': 'primary' },
                3: { 'title': 'Win', 'state': 'success' },
                4: { 'title': 'Draw', 'state': 'warning' },
              };
              return '<span class="kt-badge kt-badge--' + status[row.Result].state + ' kt-badge--dot"></span>&nbsp;<span class="kt-font-bold kt-font-' + status[row.Result].state + '">' + status[row.Result].title + '</span>';
            }
          }, {
            field: 'Pips',
            title: 'Pips',
            type: 'number',
            autoHide: false,
            width: 60
          }, {
            field: 'Profit',
            title: 'Profit',
            type: 'number',
            autoHide: false,
            width: 60
          }, {
            field: 'Note',
            title: 'Note',
            width: 90,
            sortable: false,
            template: function (row) {
              return '<pre>' + row.Note + '</pre>'
            }
          }, {
            field: 'Source',
            title: 'Source',
            width: 60,
            autoHide: false,
            template: function (row) {
              console.log(row.Source)
              if (row.Source !== 'None') {
                const tag = row.Source.split`,`[0].toLowerCase()
                const name = row.Source.split`,`[1]
                return `<a href="/admin/signal?source=${tag}" class="kt-user-card-v2__name">${name}</a>`
              } else {
                return `<span>None</span>`
              }
            }
          }, {
            field: 'CreatedBy',
            title: 'CreatedBy',
            width: 150,
            autoHide: true,
            template: function (row) {
              var stateNo = row.CreatedBy[0].toUpperCase().charCodeAt() % 7;
              var data = row.CreatedBy.split`,`
              var states = [
                'success',
                'brand',
                'danger',
                'success',
                'warning',
                'primary',
                'info'
              ];
              var desc = {
                1: { 'title': 'Admin' },
                2: { 'title': 'Moderator' },
                3: { 'title': 'Member' },
              };

              var state = states[stateNo];
              var row_avatar
              var row_name = '<a href="/admin/member/profile/' + data[2] + '" class="kt-user-card-v2__name">' + data[0] + '</a>';
              if (data[3] === "" || data[3] === undefined) {
                row_avatar = '<div class="kt-badge kt-badge--xl kt-badge--' + state + '">' + data[0][0].toUpperCase() + '</div>'
              } else {
                row_avatar = '<img src="/static/images/avatar/' + data[3] + '" alt="avatar">'
              }

              return '<div class="kt-user-card-v2">\
                    <div class="kt-user-card-v2__pic">\
                      '+ row_avatar + '\
                    </div>\
                    <div class="kt-user-card-v2__details">\
                      '+ row_name + '\
                      <span class="kt-user-card-v2__desc">'+ desc[data[1]].title + '</span>\
                    </div>\
                  </div>';
            }
          }, {
            field: 'Actions',
            title: 'Actions',
            sortable: false,
            width: 80,
            autoHide: false,
            template: function (row) {
              var row_delete = "";
              if ("<%= req.user.level%>" === "1") {
                row_delete = '<a href="/admin/signal/delete-signal/' + row['Actions'] + '" class="btn btn-sm btn-clean btn-icon btn-icon-md button-delete-signal" title="Delete"><i class="la la-trash"></i></a>'
              }
              return '<a href="/admin/signal/edit-signal/' + row['Actions'] + '" class="btn btn-sm btn-clean btn-icon btn-icon-md" title="Edit details">\
                        <i class="la la-edit"></i>\
                      </a>\
                      '+ row_delete + '';
            }
          }, {
            field: 'UploadDate',
            title: 'UploadDate',
            type: 'datetime',
            autoHide: true
          }, {
            field: 'EndDate',
            title: 'EndDate',
            type: 'datetime',
            autoHide: true
          }, {
            field: 'Duration',
            title: 'Duration',
            width: 80,
            type: 'datetime',
            autoHide: false
          },
        ],
      });

      $('#kt_form_type').on('change', function () {
        datatable.search($(this).val().toLowerCase(), 'Type');
      });

      $('#kt_form_status').on('change', function () {
        datatable.search($(this).val().toLowerCase(), 'Status');
      });

      $('#kt_form_result').on('change', function () {
        datatable.search($(this).val().toLowerCase(), 'Result');
      });

      $('#kt_form_type, #kt_form_status, #kt_form_result').selectpicker();

    };

    var KTBootstrapDaterangepicker = function () {

      // Private functions
      var demos = function () {
        $('#kt_daterangepicker').daterangepicker({
          buttonClasses: ' btn',
          applyClass: 'btn-primary',
          cancelClass: 'btn-secondary',

          startDate: moment('<%=data.date.startDate%>'),
          endDate: moment('<%=data.date.endDate%>'),
          
          ranges: {
            'Default': [moment().startOf('year'), moment().endOf('year')],
            'Today': [moment(), moment()],
            'Yesterday': [moment().subtract(1, 'days'), moment().subtract(1, 'days')],
            'Last 7 Days': [moment().subtract(6, 'days'), moment()],
            'Last 30 Days': [moment().subtract(29, 'days'), moment()],
            'This Month': [moment().startOf('month'), moment().endOf('month')],
            'Last Month': [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')]
          }
        }, function(start, end, label) {
          if(start !== "" && start !== undefined && end !== "" && end !== undefined) {
            $('#kt_daterangepicker .form-control').val(start.format('YYYY-MM-DD') + ' / ' + end.format('YYYY-MM-DD'));
            setTimeout(function(){
              window.location.href = window.location.pathname + '?' + 'start-date=' + start.format('YYYY-MM-DD') + '&' + 'end-date=' + end.format('YYYY-MM-DD')
            }, 500)
          }
        });
      }

      return {
        // public functions
        init: function () {
          demos();
        }
      };
    }();

    jQuery(document).ready(function () {
      signalIndex();
      KTBootstrapDaterangepicker.init();
    });
  </script>
  <script>
    jQuery(window).on('load', function () {
      var $ = jQuery;
      var params = window.location.search.substring(1)

      if(params !== "" && params !== undefined && params.includes('start-date') && params.includes('end-date')){
        var startDate = params.split`&`[0].split`=`[1]
        var endDate = params.split`&`[1].split`=`[1]
        $('#kt_daterangepicker .form-control').val(startDate + ' / ' + endDate);
      }

      $('.button-delete-signal').click(function (e) {
        var _href = $(this).attr('href');
        console.log(_href);
        e.preventDefault();
        swal.fire({
          title: 'Are you sure?',
          text: "You won't be able to revert this!",
          type: 'warning',
          showCancelButton: true,
          confirmButtonText: 'Yes, delete it!'
